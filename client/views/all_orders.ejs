              <th scope="col">اسم المحل</th>
              <th scope="col">#</th>
            </tr>
          </thead>
              <%
              function getStatusAsStr(status) {
                  switch(status)
                  {
                      case 0:
                          return ("قيد القبول");
                      case 1:
                          return ("جاري التوصيل");
                      case 2:
                          return ("تم التوصيل");
                  }
              }

              function convertMinsToHrsMins(mins) {
                let h = Math.floor(mins / 60);
                let m = mins % 60;
                h = h < 10 ? '0' + h : h;
                m = m < 10 ? '0' + m : m;
                return `مضي ${h} ساعة و ${m} دقيقة`;
              } %>

          <tbody id="ordersContainer">
            <% orders.forEach(function(order) { %>
            <tr>
    <td><%= getStatusAsStr(order.data.status) %></td>
    <td><%= convertMinsToHrsMins(order.data.elapsed_time) %></td>
    <td><%= order.username %> - <%= order.phone %></td>
    <td><%= order.data.location %></td>
    <td><%= order.data.cost %></td>
    <td><%= order.data.delivery_cost %></td>
    <td><%= order.data.info %></td>
    <td><a href="/store/<%= order.data.store_id %>" target="_blank" class="badge badge-success"
        style="padding:8px;font-size:13px;letter-spacing:1.5px">
        <i class="c-white-500 ti-share"></i>/<%= order.store_display_name %> - <%= order.store_passname %></a>
    </td>
  <th
    scope="row"><%= order.data.id %></th>
    </tr>
    <% }) %>
